    "primary": "#EB4762",
    "light": "#FC777C",
    "dark": "#D1475B"
  },
  "favicon": "/logo.jpg",
  "navigation": {
    "tabs": [
      {
        "tab": "Plugin Docs",
        "groups": [
          {
            "group": "Phoenix",
            "pages": [
