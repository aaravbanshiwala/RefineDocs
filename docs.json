  "logo": {
    "light": "/logo/logo.jpg",
    "dark": "/logo/logo.jpg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support Server",
        "href": "https://discord.refinedev.xyz"
      }
    ],
    "primary": {
      "type": "button",
